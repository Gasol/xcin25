INSTALL         = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA    = @INSTALL_DATA@
OS_TYPE		= @os_type@
@SET_MAKE@

program_prefix = @program_prefix@
srcdir      = @srcdir@
top_srcdir  = @top_srcdir@
prefix      = @prefix@
exec_prefix = @exec_prefix@

xcin_binp   = $(program_prefix)@bindir@
xcin_libp   = $(program_prefix)@with_xcin_dir@
xcin_datap  = ${xcin_libp}/tab
xcin_rcp    = $(program_prefix)@with_xcin_rcdir@
xcin_manp   = $(program_prefix)@mandir@

cin2tab = $(top_srcdir)/libtool --mode=execute $(top_srcdir)/src/util/cin2tab/cin2tab
xcinrc  = $(top_srcdir)/etc/xcinrc

.PHONY: install clean distclean

all: all-$(OS_TYPE)

all-LINUX:
	( GB2312ENC=gb2312 GBKENC=gbk make -f Rules make-gb2312 make-gbk )

all-FREEBSD:
	( GB2312ENC=euc make -f Rules make-gb2312 )

all-OPENBSD:
	( GB2312ENC=euc make -f Rules make-gb2312 )

all-NETBSD:
	( GB2312ENC=euccn make -f Rules make-gb2312 )

all-HPUX:
	( GB2312ENC=hp15cn make -f Rules make-gb2312 )

all-SOLARIS:
	( GB2312ENC=euc make -f Rules make-gb2312 )


install: all install-$(OS_TYPE)

install-LINUX:
	( GB2312ENC=gb2312 GBKENC=gbk make -f Rules install_gb2312 install_gbk )

install-FREEBSD:
	( GB2312ENC=euc make -f Rules install_gb2312 )

install-OPENBSD:
	( GB2312ENC=euc make -f Rules install_gb2312 )

install-NETBSD:
	( GB2312ENC=euccn make -f Rules install_gb2312 )

install-HPUX:
	( GB2312ENC=hp15cn make -f Rules install_gb2312 )

install-SOLARIS:
	( GB2312ENC=euc make -f Rules install_gb2312 )


clean:
	rm -f *.tab* core
distclean: clean
	rm -f Makefile


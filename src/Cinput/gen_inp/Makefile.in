srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
include $(top_srcdir)/Rules

INC		= $(xcininc) $(x_includes)
TARGET		= gen_inp.la

SRC = gen_inp.c
OBJ = $(SRC:.c=.lo)

.PHONY: depend clean distclean

all: $(TARGET)

$(TARGET): $(OBJ)
	$(LIBTOOL) --mode=link $(CC) -module -o $(TARGET) $(OBJ) \
		-rpath $(moddir)
include .depend

depend:
	$(Dep_Rule) | $(PERL) $(makedep) $(rules) LC_Rule lo > .depend

clean:
	rm -f $(OBJ) *.o $(TARGET) core *.a
distclean: clean
	rm -rf Makefile .libs
install: $(module_build)
	$(LIBTOOL) --mode=install $(INSTALL_DATA) $(TARGET) $(xcin_modp)

srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
include $(top_srcdir)/Rules

INC     = $(xcininc) $(x_includes) $(tabe_inc) $(db_inc)
LIB     = $(xcinlib) $(bims_lib) $(tabe_lib) $(db_lib)
TARGET  = bimsphone.la

SRC = bimsphone.c bimspinyin.c
OBJ = $(SRC:.c=.lo)

.PHONY: depend clean distclean

all: $(TARGET)

$(TARGET): $(OBJ)
	$(LIBTOOL) --mode=link $(CC) -module -o $(TARGET) $(OBJ) $(LIB) \
		-rpath $(moddir)
include .depend

depend:
	$(Dep_Rule) | $(PERL) $(makedep) $(rules) LC_Rule lo > .depend
clean:
	rm -f $(OBJ) *.o $(TARGET) core *.a
distclean: clean
	rm -rf Makefile .libs
install: $(TARGET)
	$(LIBTOOL) --mode=install $(INSTALL_DATA) $(TARGET) $(xcin_modp)

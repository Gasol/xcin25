srcdir	   = @srcdir@
top_srcdir = @top_srcdir@
include $(top_srcdir)/Rules

INC =	$(xcininc) $(intl_inc)
SRC =	check_file.c debug.c get_line.c get_word.c load_module.c open_file.c \
	perr.c set_data.c set_locale.c stable_sort.c strcmp_wild.c \
	xcin_malloc.c xcin_rc.c xcin_snprintf.c wchs_to_mbs.c

OBJ =   $(SRC:.c=.lo)

.PHONY: depend clean distclean

all: $(OBJ)

include .depend

depend:
	$(Dep_Rule) | $(PERL) $(makedep) $(rules) LC_Rule lo > .depend

clean:
	rm -f $(OBJ) *.o core
distclean: clean
	rm -rf Makefile .libs
